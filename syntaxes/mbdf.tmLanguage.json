{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MBDF",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.mbdf comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.mbdf comment.line.double-slash",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {   
            "name": "keyword.definition.mbdf",
            "match": "\\b(description_file|bus_protocol_version|bus_language_version|bus_speed)\\b"

        },
        {
          "name": "keyword.control.mbdf",
          "match": "\\b(Nodes|Signals|Frames|Node_attributes|Schedule_tables|Signal_encoding_types|Signal_representation)\\b"
        },
        {
            "name": "keyword.node.mbdf",
            "match": "\\b(bus_protocol|configured_NAD|product_id|response_error|P2_min|M2S_ACK|supported_frames)\\b"    
        },
        {
            "name": "keyword.special.mbdf",
            "match": "\\b(Wakeup|AutoAddress|AutoAddressSaveNad|PowerSupply|DigOutput|DigInput)\\b"
    
        },
        {
          "name": "keyword.other.mbdf",
          "match": "\\b(Master|Slaves|M2S|S2M|DATA|LED|LED_EXTENDED|NONE|DATA|Broadcast|delay|ms|s|us|logical_value|physical_value)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mbdf",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.mbdf",
          "match": "\\b0x[0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.float.mbdf",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.decimal.mbdf",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mbdf",
          "match": "[{}:;,=]"
        }
      ]
    }
  },
  "scopeName": "source.mbdf"
}
